  <script>
    var x = document.getElementById("map");

    function generateMap() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(init);
      } else { 
        x.innerHTML = "Geolocation is not supported by this browser.";
      }
    }

    function init(position) {
      const latitude  = position.coords.latitude;
      const longitude = position.coords.longitude;

      var mymap = L.map('map').setView([latitude, longitude], 18);
      var token = "<%=token%>" // TODO: Visible in inspect.

      L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
        maxZoom: 20,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: token // 'sk.eyJ1IjoiMmRvbnMiLCJhIjoiY2t2Z2lqdXd6MTlodjJ1bjNsajZ1dWFmaSJ9.tR_rFBw_5v0uSq9sQP7YLg'
      }).addTo(mymap);
      var marker1 = L.marker([latitude, longitude]).addTo(mymap);
      marker1.bindPopup("<b>User: Ja</b><br><b>Latitude: " + latitude + "</b><br><b>Longitude: " + longitude + "</b><br>").openPopup();
    }
  </script>

</head>

<body onload="generateMap();">
  

