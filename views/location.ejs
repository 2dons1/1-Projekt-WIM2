   crossorigin=""/>
   <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
   integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
   crossorigin=""></script>
  <title>1.Projekt - dd51028</title>
  <script>
    var x = document.getElementById("map");

    function generateMap() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(init);
      } else { 
        x.innerHTML = "Geolocation is not supported by this browser.";
      }
    }

    // Ova funkcija bi trebala citat iz baze(dohvat zadnjih pet prijava)
    function getLogins(){
      return [
              {lat: 45.546206, long: 18.700875, user: "Dorian"},
              {lat: 45.370919, long: 14.350810, user: "Filip"}, 
              {lat: 45.899927, long: 16.864966, user: "Vrba"}, 
              {lat: 43.499808, long: 16.472835, user: "Sosko"}, 
              {lat: 45.143058, long: 16.279266, user: "Marin"}
            ]
    }

    function init(position) {
      let markers = getLogins();

      const latitude  = position.coords.latitude;
      const longitude = position.coords.longitude;

      var mymap = L.map('map').setView([latitude, longitude], 18);
      var token = "<%=token%>" // TODO: Visible in inspect.

      L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors, Imagery © <a href="https://www.mapbox.com/">Mapbox</a>',
        maxZoom: 20,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: token // 'sk.eyJ1IjoiMmRvbnMiLCJhIjoiY2t2Z2lqdXd6MTlodjJ1bjNsajZ1dWFmaSJ9.tR_rFBw_5v0uSq9sQP7YLg'
      }).addTo(mymap);
      // Dodaj zadnjih 5 logina.
      for (let i = 0; i < markers.length; i++) {
        var marker = L.marker([markers[i]['lat'], markers[i]['long']]).addTo(mymap);
        marker.bindPopup("<b>User: " + markers[i]['user'] + "</b><br><b>Latitude: " + markers[i]['lat'] + "</b><br><b>Longitude: " + markers[i]['long'] + "</b><br>");
      }
      // Dodaj svoju trenutnu lokaciju.
      var marker1 = L.marker([latitude, longitude]).addTo(mymap);
      marker1.bindPopup("<b>User: Ja</b><br><b>Latitude: " + latitude + "</b><br><b>Longitude: " + longitude + "</b><br>");
    }
  </script>
</head>

<body>
  

  <h1> 1. Projekt iz "Napredni razvoj programske potpore za web" </h1>
