  <% if (auth) { %>
    <div id="auth">
      <p><a href="<%=linkOUT%>">Logout</a></p>
      <hr>
      <h2>Prikaz brojčane vrijednoste trenutne lokacije</h2>
        <p>Klikni dugme kako bi otkrio di si!</p>
        <button onclick="getLocation()">Pronadi Me!</button>
        <p id="location"></p>
      <hr>
      <h2>Prikaz lokacije na karti</h2>
      <p>Klikni dugme kako bi otkrio di si!</p>
      <button onclick="generateMap()">Pronadi Me Na Karti!</button>
      <div id="map" style="height: 500px;"></div>
      <hr>
  
    </div>
    <% } %>
    <% if (!auth) { %>
      <p>Nemate pravo pregledati ovaj sadržaj.</p>
      <p><a href="<%=linkIN%>">Login</a></p>
    <% } %>

    <script src="geolocation.js"></script>
</body>
</html>

