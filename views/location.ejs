  <script>
    var x = document.getElementById("map");
    var db = openDatabase('mydb', '1.0', 'Lokacije', 2 * 1024 * 1024);
    var polje = [];
    var markeriTest = select(polje);

    function generateMap() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(init);
        console.log("Zatrazen je pristup lokaciji");
      } else { 
        x.innerHTML = "Geolocation is not supported by this browser.";
      }
    }

    // Ova funkcija bi trebala citat iz baze(dohvat zadnjih pet prijava)
    function getLogins(){
      return [
              {lat: 45.546206, long: 18.700875, user: "Dorian"},
