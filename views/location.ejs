              {lat: 43.499808, long: 16.472835, user: "Sosko"}, 
              {lat: 45.143058, long: 16.279266, user: "Marin"}
            ]
    }
    function select(polje){
      db.transaction(function (tx) {
        tx.executeSql('SELECT * FROM LOGS4 ORDER BY ID DESC LIMIT 5 ', [], function (tx, results) {
          var len = results.rows.length, i;
          for (i = 0; i < len; i++) {
            var marker = {"lat": results.rows.item(i).lat, "long": results.rows.item(i).long, "user": results.rows.item(i).username};
            polje.push(marker);
          }
        }, null);
      })
      return polje;
    }

    function insert(username, lat, long){
      console.log(username + ", " + lat + ", " + long);

      db.transaction(function (tx) {
        tx.executeSql('CREATE TABLE IF NOT EXISTS LOGS4 (id integer primary key autoincrement, username, lat, long)');
        tx.executeSql("INSERT INTO LOGS4 (username, lat, long) VALUES ('" + username + "', '" + lat + "', '" + long + "')");
      })
      
    }

    function init(position) {
      console.log("Uso sam tu!");
      const latitude  = position.coords.latitude;
      const longitude = position.coords.longitude;
      const username = document.getElementById("username");

      // Karta ce se sada ucitat, pokupi usera i njegovu lokaciju, spremi to u bazu.
      insert(username.innerHTML, latitude, longitude);

      // Nakon sto si usera spremio u bazu pokupi zadnjih 5 ntorki iz baze.
      // var m = [];
      // var markers1 = select(m);
      // console.log(JSON.stringify(markers1));

      var mymap = L.map('map').setView([latitude, longitude], 18);
      var token = "<%=token%>" // TODO: Visible in inspect.

      L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
